type User {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String!
  middleName: String
  email: String! @unique
  password: String!
  description: String
  socials: [SocialProfile!]!
}

type Event {
  id: ID! @id
  name: String!
  attendees: [User!]! @relation(name: "Attendees")
  organizer: User! @relation(name: "Organizer")
  talks: [Talk!]!
  venue: Venue
  timeStart: Int
  timeEnd: Int
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Talk {
  id: ID! @id
  title: String!
  description: String!
  speaker: User!
  length: Int!
  remarks: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type SocialProfile {
  id: ID! @id
  type: SocialNetworks!
  value: String! @unique
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

enum SocialNetworks {
  FACEBOOK,
  TWITTER,
  GITHUB,
  LINKEDIN,
  PERSONAL
}

type Venue {
  id: ID! @id
  name: String!
  address: String!
  googPlaceId: String
  coords: Coordinates
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Coordinates {
  id: ID! @id
  x: Float!
  y: Float!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
